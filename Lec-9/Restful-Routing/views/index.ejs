<body>
    <h1>List all the comments/arr</h1>
    <!-- commenrs->array ->loop -->

   <% for(let item of comments){ %> 
        <h2> <%= item.id %> </h2>
        <h3> <%= item.username %> </h3> 
        <h4> <%= item.comment %> </h4>

        <form action="/comments/<%= item.id %>?_method=DELETE" method="post">    <!-- see in Task-7 index.js -->
             <button>Delete</button>
        </form>
      
    <% } %>


</body>
</html>